{
  "buildCommand": "cd ../.. && corepack enable && pnpm install --no-frozen-lockfile && turbo run build --filter=./apps/web",
  "installCommand": "cd ../.. && corepack enable && pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "rootDirectory": "apps/web",
  "crons": [
    {
      "path": "/api/watch/all",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/resend/summary/all",
      "schedule": "0 16 * * 1"
    },
    {
      "path": "/api/reply-tracker/disable-unused-auto-draft",
      "schedule": "0 3 * * *"
    }
  ]
}
