{
  "buildCommand": "cd ../.. && pnpm build",
  "installCommand": "cd ../.. && npm install -g pnpm@10.19.0 && pnpm install --no-frozen-lockfile",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/watch/all",
      "schedule": "0 1 * * *"
    },
    {
      "path": "/api/resend/summary/all",
      "schedule": "0 16 * * 1"
    },
    {
      "path": "/api/reply-tracker/disable-unused-auto-draft",
      "schedule": "0 3 * * *"
    }
  ]
}
